<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE tiles-definitions PUBLIC  "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- Base Definition -->
    <definition name="base-definition"
                template="/WEB-INF/views/layouts/default.jsp">
        <put-attribute name="header" value="/WEB-INF/views/layouts/defaultHeader.jsp" />
        <put-attribute name="menu" value="/WEB-INF/views/layouts/defaultMenu.jsp" />
        <put-attribute name="title" value="Quiz" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/views/layouts/defaultFooter.jsp" />
    </definition>
    <!-- SPA (Single page application) Definition -->
    <definition name="spa-definition"
                template="/WEB-INF/views/layouts/default.jsp">
        <put-attribute name="header" value="" />
        <put-attribute name="menu" value="" />
        <put-attribute name="title" value="" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="" />
    </definition>
    <!-- Home Page -->
    <definition name="home" extends="base-definition">
        <put-attribute name="title" value="Welcome to Quiz" />
        <put-attribute name="body" value="/WEB-INF/views/home.jsp" />
    </definition>
    <!-- Error Page -->
    <definition name="default_error" extends="base-definition">
        <put-attribute name="menu" value=""/>
        <put-attribute name="title" value="Page not found"/>
        <put-attribute name="body" value="/WEB-INF/views/layouts/error.jsp"/>
    </definition>
    <definition name="error" extends="base-definition">
        <put-attribute name="header" value="" />
        <put-attribute name="menu" value="" />
        <put-attribute name="title" value="Error in Quiz" />
        <put-attribute name="body" value="/WEB-INF/views/layouts/error.jsp" />
        <put-attribute name="footer" value="/WEB-INF/views/layouts/miniFooter.jsp" />
    </definition>
</tiles-definitions>